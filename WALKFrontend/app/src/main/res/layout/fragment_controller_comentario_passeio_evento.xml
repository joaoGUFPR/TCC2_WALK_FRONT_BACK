<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controller.ControllerComentarioPasseioEvento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#004AAD"
        android:paddingTop="0sp"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="47dp"
            android:gravity="center"
            android:text="Comentário"
            android:textSize="30sp"
            android:textColor="@color/white">

        </TextView>
        <ImageView
            android:id="@+id/iVReticenciaBarraPasseioEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:src="@drawable/baseline_more_vert"
            app:tint="@android:color/white" />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardElevation="4dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp">

            <!-- Primeira linha com imagem e textos -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Imagem de perfil -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/ivPerfilPasseioEvento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_account_circle_24" />
                </androidx.cardview.widget.CardView>

                <!-- Textos (nome e mensagem) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNomePerfilPasseioEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvDescricaoPasseioEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gostaria de ir ao cinema assistir o filme do Deadpool fim de semana no Palladium, algum interessado?"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </TableRow>


            <!-- Segunda linha com ícones e horário -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <!-- Ícone de mapa -->


                <!-- Espaço vazio para alinhar o horário à direita -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Horário -->
                <TextView
                    android:id="@+id/tVHorarioComentarioPasseioEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:45"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ComentarioPasseioEventoRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:clipToPadding="false"
        tools:itemCount="2"
        tools:listitem="@layout/list_item_comentario_comunidade"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="0dp"
        android:padding="12dp"
        android:background="#F6F6F6">


        <!-- Segunda linha com EditText de descrição -->
        <EditText
            android:id="@+id/etComentarioPasseioEvento"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:background="@android:drawable/edit_text"
            android:gravity="top"
            android:padding="8dp"
            android:inputType="textMultiLine" />

        <!-- Botão Criar Passeio -->
        <Button
            android:id="@+id/btnCriarComentarioPasseioEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#004AAD"
            android:layout_gravity="center"
            android:text="Comentar"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>