<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controller.ControllerADM">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#004AAD"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tVPerfilAmigo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="47dp"
            android:gravity="center"
            android:text="ADM"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iVFuncoesPerfilAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:src="@drawable/baseline_more_vert"
            app:tint="@android:color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUsuarioADM"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#004AAD"
        android:layout_gravity="center"
        android:textSize="20dp"
        app:cornerRadius="30dp"
        android:text="UsuÃ¡rio"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnEmpresaADM"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#004AAD"
        android:layout_gravity="center"
        android:textSize="20dp"
        app:cornerRadius="30dp"
        android:text="Empresa"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnComunidadeADM"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#004AAD"
        android:textSize="20dp"
        app:cornerRadius="30dp"
        android:layout_gravity="center"
        android:text="Comunidade"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnEventoADM"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#004AAD"
        app:cornerRadius="30dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Evento"
        android:textColor="@color/white" />

</LinearLayout>