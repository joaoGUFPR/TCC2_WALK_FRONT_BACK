<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:forceDarkAllowed="false"
    tools:context=".controller.ControllerPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#004AAD"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iVNotificacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="15dp"
            android:src="@drawable/baseline_notifications_24"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tVPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:gravity="center"
            android:text="Perfil"
            android:textSize="30sp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iVFuncoesPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:paddingEnd="10dp"
            android:src="@drawable/baseline_more_vert"
            app:tint="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:id="@+id/tVCidade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cidade"
            android:gravity="center"
            android:paddingTop="10sp"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iVPerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_account_circle_24"
                 />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tVNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="2.5dp"
            />

        <TextView
            android:id="@+id/tVUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:textColor="#3D3D40"
            android:text="\@Loading"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tVDescricaoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textColor="@color/black"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/tVNAmizades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:id="@+id/tVAmizades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amizades"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/tVNEmpresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:id="@+id/tVEmpresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresas"
            android:textSize="12sp"
            android:layout_marginLeft="1dp"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/tVNPasseios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="1dp"
            />

        <TextView
            android:id="@+id/tVPasseios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passeios"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginLeft="1dp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/buttonChats"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Meus Chats"
        android:backgroundTint="#004AAD"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/buttonMinhasComunidades"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Minhas Comunidades"
        android:backgroundTint="#004AAD"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/buttonComunidadesFavoritas"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Comunidades Favoritas"
        android:backgroundTint="#004AAD"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/buttonEventosFavoritos"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Eventos Favoritos"
        android:backgroundTint="#004AAD"
        android:textColor="@android:color/white"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="25dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMeusPasseios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        tools:itemCount="5"
        tools:listitem="@layout/list_item_passeio"
        />


</LinearLayout>
