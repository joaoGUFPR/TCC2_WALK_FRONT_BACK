<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="30dp"
    android:forceDarkAllowed="false"
    app:cardElevation="4dp">

    <!-- Usamos FrameLayout para sobrepor a reticência -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <!-- Seu conteúdo principal em TableLayout -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Primeira linha com imagem e textos -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Imagem de perfil -->
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iVPerfilPasseioEvento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_account_circle_24" />
                </androidx.cardview.widget.CardView>

                <!-- Espaço para separar a imagem dos textos -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/tVNomePerfilPasseioEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tVDescricaoPasseioEvento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Loading"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </TableRow>

            <!-- Segunda linha com ícones e horário -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <!-- Ícone de chat -->
                <ImageView
                    android:id="@+id/ivBubbleEvento"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_chat_bubble_24" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Horário -->
                <TextView
                    android:id="@+id/tVHorarioEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:45"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            </TableRow>
        </TableLayout>

        <!-- Ícone de reticências posicionado no canto superior direito -->
        <ImageView
            android:id="@+id/iVReticenciaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_more_vert_24"
            app:tint="@android:color/black" />
    </FrameLayout>

</androidx.cardview.widget.CardView>
