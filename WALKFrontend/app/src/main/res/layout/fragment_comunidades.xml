<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.ControllerComunidade">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#004AAD"
        android:paddingTop="0sp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Comunidades"
            android:textSize="30sp"
            android:textColor="@color/white">

        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10sp"
        android:layout_marginTop="0sp">
        <TextView
            android:id="@+id/tVCidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cidades"
            android:paddingTop="10sp"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="48dp">
        </TextView>

        <ImageButton
            android:id="@+id/iVArrowDropButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="6sp"
            android:background="@color/white"
            android:src="@drawable/baseline_arrow_drop_down_24"
            android:contentDescription="Apply Filters" />



    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_searchview_background">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:queryHint="Pesquisar"
            />

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/borda_filter"
            android:src="@drawable/baseline_filter_list_24"
            android:contentDescription="Apply Filters"
            android:tint="@android:color/white"/>
    </LinearLayout>
</LinearLayout>


    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ComunidadeRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        tools:itemCount="5"
        tools:listitem="@layout/list_item"
        />
</LinearLayout>
